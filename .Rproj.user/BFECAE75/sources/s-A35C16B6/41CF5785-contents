bookdown::gitbook:
  css: style.css
  config:
    toc:
      before: |
        <li><a href="./">Apuntes 2020-2021</a></li>
      after: |
        <li><a href="https://github.com/rstudio/bookdown" target="blank">Publicado con bookdown</a></li>
    edit: https://github.com/saul-torres/apuntes_2020/edit/master/%s  
    download: ["pdf", "epub"]
